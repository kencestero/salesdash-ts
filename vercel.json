{
  "buildCommand": "prisma generate && next build",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.mjsalesdash.com"
        }
      ],
      "destination": "https://mjsalesdash.com/:path*",
      "statusCode": 308
    }
  ],
  "crons": [
    {
      "path": "/api/cron/sync-sheets",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/follow-ups",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/import-email-inventory",
      "schedule": "0 16 * * *",
      "comment": "11:00 AM EST (4:00 PM UTC) - Morning inventory check"
    },
    {
      "path": "/api/cron/import-email-inventory",
      "schedule": "0 21 * * *",
      "comment": "4:00 PM EST (9:00 PM UTC) - Afternoon inventory check"
    },
    {
      "path": "/api/cron/daily-digest",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/stale-leads",
      "schedule": "0 15 * * *"
    }
  ],
  "functions": {
    "app/api/quotes/export/route.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
