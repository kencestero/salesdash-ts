# ============================================
# SALESDASH ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env.local and fill in actual values
# NEVER commit .env.local to git!

# ============================================
# DATABASE
# ============================================
# Prisma Database URL (required)
# Use Prisma Accelerate format: prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY
# OR direct PostgreSQL: postgres://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL="REPLACE_WITH_YOUR_DATABASE_URL"

# Optional: Additional database URLs for different environments
DATABASE_POSTGRES_URL="REPLACE_WITH_DIRECT_POSTGRES_URL"
DATABASE_PRISMA_DATABASE_URL="REPLACE_WITH_PRISMA_ACCELERATE_URL"

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="REPLACE_WITH_RANDOM_32_BYTE_SECRET"

# Google OAuth Credentials
# Get from: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID="YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com"
AUTH_GOOGLE_SECRET="GOCSPX-YOUR_GOOGLE_CLIENT_SECRET"

# Auth Configuration
AUTH_TRUST_HOST="true"
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# GOOGLE SERVICES
# ============================================
# Google Service Account (for Sheets/Drive API)
GOOGLE_CLIENT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Google Sheets & Apps Script
INVENTORY_CSV="https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/edit"
APPS_SCRIPT_URL="https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec"

# ============================================
# FIREBASE (Chat/Realtime features)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY="YOUR_FIREBASE_API_KEY"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.firebasestorage.app"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789"
NEXT_PUBLIC_FIREBASE_APP_ID="1:123456789:web:abcdef123456"

# ============================================
# OUTSETA (Billing/Subscription)
# ============================================
OUTSETA_API_KEY="YOUR_OUTSETA_API_KEY"
OUTSETA_API_SECRET="YOUR_OUTSETA_API_SECRET"
OUTSETA_BASE_URL="https://your-company.outseta.com"
NEXT_PUBLIC_OUTSETA_PORTAL_URL="https://your-company.outseta.com"

# ============================================
# ACCESS CONTROL
# ============================================
# Comma-separated email lists
OWNERS="owner1@example.com,owner2@example.com"
MANAGERS="manager1@example.com,manager2@example.com"

# Access Control Settings
ACCESS_ALLOWLIST_ENABLED="false"
ALLOWED_EMAILS="email1@example.com,email2@example.com"
ALLOWED_DOMAINS="yourcompany.com"

# Join/Invite Codes
INVITE_CODE="YOUR-SECRET-INVITE-CODE"
SIGNUP_CODE="YOUR-DAILY-ROTATING-CODE"

# ============================================
# WEBHOOKS & INTEGRATIONS
# ============================================
LEADS_WEBHOOK_KEY="YOUR_LONG_RANDOM_WEBHOOK_KEY_128_CHARS_MINIMUM"

# ============================================
# PLASMIC CMS
# ============================================
PLASMIC_PUBLIC_TOKEN="YOUR_PLASMIC_PUBLIC_TOKEN"

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
ALLOW_ORIGIN="http://localhost:3000"

